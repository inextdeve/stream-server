<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Camera</title>
    <style>
      body {
        margin: 0;
        padding: 0;
      }
      video {
        height: 100vh;
        width: 100%;
        display: block;
      }
    </style>
  </head>

  <body>
    <video id="videoHLS" autoplay controls></video>
    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
    <script>
      if (Hls.isSupported()) {
        var video = document.getElementById("videoHLS");
        var hls = new Hls();
        // bind them together
        hls.attachMedia(video);
        //http://localhost:9000/streams/output.m3u8
        hls.on(Hls.Events.MEDIA_ATTACHED, function () {
          hls.loadSource("<%= src %>");
          hls.on(Hls.Events.MANIFEST_PARSED, function (event, data) {});
        });
      }
    </script>
  </body>
</html>
